<label>
	<input type="radio" name="level-access" id="level-access.yes" value="Yes" class="jaffa-field">
		Yes
</label>
<div style="margin-left:3em" id="level-access-details">
    <label>Future date:<input type="text" id="futureAccessDate" class="jaffa-field"></label><br>
    <label>Details:<textarea id="levelAccessDetails" cols="80" rows="4" class="jaffa-field"></textarea></label>
</div>
<label>
      <input type="radio" name="level-access" id="level-access.no" value="No" class="jaffa-field">
      No
</label>

<script>
						   	    
$(document).ready(function() {
	 $("[id='futureAccessDate']").datepicker({
		 changeMonth: true,
		 changeYear: true
         ,showButtonPanel: true	 });

	function toggleAccessDetails() {
		if($('input:radio[name=level-access]:checked').val() == "Yes") {
			$("[id='level-access-details']").show();
		} else {
			$("[id='level-access-details']").hide();
			$("[id='futureAccessDate']").val("");
			$("[id='levelAccessDetails']").val("");
		}
	}
	toggleAccessDetails();
	$('input:radio[name=level-access]').change(function() {
		toggleAccessDetails();	
	});		
});
   
</script>
