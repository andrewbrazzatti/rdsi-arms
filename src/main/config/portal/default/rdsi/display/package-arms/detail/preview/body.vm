<style type="text/css">
#content tr:nth-child(even) td { background: #CCC }
#content td:first-child { width: 15em; border-right: 1px solid; }
.people {
    float: left;
    margin: 0 2em 2em 0;
    width: 45%;
}
#people-container td:first-child { width: 10em; border-right: 1px solid; }
</style>

#set($contentJson = $self.packageData)
<p>
	<span>Citation:</span>$page.escapeHtml($contentJson.getValue("citation"))
</p>

<h4>Description</h4>
<p>$page.escapeHtml($contentJson.getValue("collection:description"))</p>

<h4>Merit description</h4>
<p>$page.escapeHtml($contentJson.getValue("merit:description"))</p>

<div id="people-container">
	<div class="people">
		<h4>Data custodian</h4>
		<table>
			<tr>
				<td>Name:</td>
				<td>$page.escapeHtml($contentJson.getValue("dataprovider:title"))
					$page.escapeHtml($contentJson.getValue("dataprovider:givenName"))
					$page.escapeHtml($contentJson.getValue("dataprovider:familyName"))
				</td>
			</tr>
			<tr>
				<td>Role:</td>
				<td>$page.escapeHtml($contentJson.getValue("dataprovider:role"))</td>
			</tr>
			<tr>
				<td>Organisation:</td>
				<td>$page.escapeHtml($contentJson.getValue("dataprovider:organization"))</td>
			</tr>
			<tr>
				<td>State:</td>
				<td>$page.escapeHtml($contentJson.getValue("dataprovider:state:prefLabel"))</td>
			</tr>
			<tr>
				<td>email:</td>
				<td>$page.escapeHtml($contentJson.getValue("dataprovider:email"))</td>
			</tr>
			<tr>
				<td>phone:</td>
				<td>$page.escapeHtml($contentJson.getValue("dataprovider:phone"))</td>
			</tr>
		</table>
	</div>
	<div class="people">
		<h4>Data manager</h4>
		<table>
			<tr>
				<td>Name:</td>
				<td>$page.escapeHtml($contentJson.getValue("requester:title"))
					$page.escapeHtml($contentJson.getValue("requester:givenName"))
					$page.escapeHtml($contentJson.getValue("requester:familyName"))
				</td>
			</tr>
			<tr>
				<td>Role:</td>
				<td>$page.escapeHtml($contentJson.getValue("requester:role"))</td>
			</tr>
			<tr>
				<td>Organisation:</td>
				<td>$page.escapeHtml($contentJson.getValue("requester:organization"))</td>
			</tr>
			<tr>
				<td>State:</td>
				<td>$page.escapeHtml($contentJson.getValue("requester:state:prefLabel"))</td>
			</tr>
			<tr>
				<td>email:</td>
				<td>$page.escapeHtml($contentJson.getValue("requester:email"))</td>
			</tr>
			<tr>
				<td>phone:</td>
				<td>$page.escapeHtml($contentJson.getValue("requester:phone"))</td>
			</tr>
		</table>
	</div>
</div>
<h4 style="clear: left">Data profile</h4>
<table>
	<tr>
		<td>Primary RDSI node:</td>
		<td>$page.escapeHtml($contentJson.getValue("rdsi-node"))</td>
	</tr>
	<tr>
		<td>Other hosting node:</td>
		<td>#displayList($contentJson.getValueList("rdsi-secondary-nodes"))</td>
	</tr>
	<tr>
		<td>Current data size:</td>
		<td>$page.escapeHtml($contentJson.getValue("data-size"))</td>
	</tr>
	<tr>
		<td>Data format:</td>
		<td>$page.escapeHtml($contentJson.getValue("vivo-Dataset.dc.format"))</td>
	</tr>
	<tr>
		<td>Required storage class:</td>
		<td>$page.escapeHtml($contentJson.getValue("storage-class"))</td>
	</tr>
	<tr>
		<td>Data medium and migration:</td>
		<td>$page.escapeHtml($contentJson.getValue("data-medium-migration"))</td>
	</tr>
	<tr>
		<td>Required tools and interfaces:</td>
		<td>$page.escapeHtml($contentJson.getValue("migrate-required-resources"))</td>
	</tr>
	<tr>
		<td>RDSI is the only host?</td>
		<td>
			#set( $vals = [$contentJson.getValue("storage-risk-rdsi-only"), $contentJson.getValue("storage-risk-regenerate"), $contentJson.getValue("storage-risk-disruption")] )
			#displayList($vals)
		</td>
	</tr>
</table>
<h4>Data schedule</h4>
<table>
	<tr>
		<td>Anticipated ingest 0f 25%:</td>
		<td>$contentJson.getValue("ingest-1qtr")</td>
	</tr>
	<tr>
		<td>Anticipated ingest 0f 50%:</td>
		<td>$contentJson.getValue("ingest-2qtr")</td>
	</tr>
	<tr>
		<td>Anticipated ingest 0f 75%:</td>
		<td>$contentJson.getValue("ingest-3qtr")</td>
	</tr>
	<tr>
		<td>Anticipated ingest 0f 100%:</td>
		<td>$contentJson.getValue("ingest-4qtr")</td>
	</tr>
</table>
<h4>Access and licensing</h4>
<table>
	<tr>
		<td>Access restriction:</td>
		<td>$contentJson.getValue("accessRestrictions")</td>
	</tr>
	<tr>
		<td>Terms of use:</td>
		<td>$contentJson.getValue("dc:rights.skos:note")</td>
	</tr>
	<tr>
		<td>Licence:</td>
		<td>$contentJson.getValue("dc:accessRights")</td>
	</tr>
	<tr>
		<td>Anticipated number of users:</td>
		<td>$contentJson.getValue("user-number")</td>
	</tr>
	<tr>
		<td>Access frequency:</td>
		<td>$contentJson.getValue("user-access-frequency")</td>
	</tr>
</table>
<h4>Other details</h4>
<table>
	<tr>
		<td>Field(s) of research:</td>
		<td>
			#displayList($contentJson.getRepeatables('dc:subject.anzsrc:for','skos:prefLabel'))
		</td>
	</tr>
	<tr>
		<td>Metadata records:</td>
		<td>#displayList($contentJson.getValueList("discover-metadata"))
		</td>
	</tr>
</table>
