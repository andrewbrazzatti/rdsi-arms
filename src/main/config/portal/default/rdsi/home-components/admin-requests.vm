#set($menuTitle = "#displayMessage('arms.home.admin-dashboard.pending.title')")
#parseTemplate("wrapping/info-box-open.vm")
<div class="block">
#set($results = $self.getListOfStage('arms-request'))
#if ($results && $results.size() > 0)
<p style="margin-bottom: 0px;">#displayMessage('arms.home.requests.draft.title')</p>
<table>
    <thead>
        <tr>
            <th>#displayMessage('arms.home.requests.table.collection.title')</th>
            <th>#displayMessage('arms.home.requests.table.status')</th>
        </tr>
    </thead>
    <tbody>
	#foreach($item in $results)
	    #set($oid = $item.get("id"))
	    <tr>
	    	<td><a href="$portalPath/detail/$oid">$item.get("dc_title")</a></td>
	        <td><a href="$portalPath/workflow/$oid"><img alt="#displayMessage('arms.home.request.manage.edit')" src="$portalPath/images/icons/workflow_edit.png" title="#displayMessage('arms.home.requests.manage.edit')"></a>
	       </td>
	    </tr>
	#end
    </tbody>
</table>
#end
#set($results = $self.getListOfStage('arms-approved,arms-retired'))
#if ($results && $results.size() > 0)
<p style="margin-bottom: 0px;">#displayMessage('arms.home.admin-dashboard.holdding.title')</p>
<table>
    <thead>
        <tr>
            <th>#displayMessage('arms.home.requests.table.collection.title')</th>
            <th>#displayMessage('arms.home.admin-dashboard.holdding.manager')</th>
        </tr>
    </thead>
    <tbody>
	#foreach($item in $results)
	    #set($oid = $item.get("id"))
	    <tr>
	    	<td><a href="$portalPath/detail/$oid">$item.get("dc_title")</a></td>
	        <td>$item.get("dataprovider:foaf:email")</td>
	    </tr>
	#end
    </tbody>
</table>
#end
</div>
